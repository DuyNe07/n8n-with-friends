# --- Cấu hình Database (PostgreSQL) ---
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres        # <-- Tên service trong postgres/docker-compose.yml
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=TaraJSC # <-- Tên database bạn đã đặt
DB_POSTGRESDB_USER=TaraJSC       # <-- Username bạn đã đặt


# --- Cấu hình Queue (Redis) ---
QUEUE_MODE=redis                  # <-- Bắt buộc để sử dụng Redis queue
QUEUE_BULL_REDIS_HOST=redis       # <-- Tên service trong redis/docker-compose.yml
QUEUE_BULL_REDIS_PORT=6379
QUEUE_BULL_REDIS_DB=0           # <-- Có thể để mặc định là 0

# --- Cấu hình Chế độ thực thi ---
EXECUTIONS_MODE=queue             # <-- Bắt buộc để kích hoạt chế độ queue

# --- Các biến môi trường khác của bạn (giữ nguyên) ---
N8N_ENCRYPTION_KEY=TaraJSC_2025 # <-- Giữ nguyên khóa mã hóa của bạn
WEBHOOK_URL=https://platypus-assuring-usually.ngrok-free.app/ # <-- Giữ nguyên URL webhook
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true

# Thêm các biến môi trường cần thiết khác nếu có...
GENERIC_TIMEZONE=Asia/Ho_Chi_Minh
TZ=Asia/Ho_Chi_Minh

N8N_RUNNERS_ENABLED=true
OFFLOAD_MANUAL_EXECUTIONS_TO_WORKERS=true